<main class="col-md-8 ms-sm-auto col-lg-10 px-md-4">
    <div class="table-responsive">
        <div class="table-wrapper">
            <div class="table-title">
                <div class="row">
                    <div class="col-sm-5">
                        <h2>Confirmación de préstamo</h2>
                    </div>
                    <div class="col-sm-7">
                        <a href="#" class="btn btn-secondary"><i class="material-icons">&#xE147;</i> <span>Add New User</span></a>
                        <a href="#" class="btn btn-secondary"><i class="material-icons">&#xE24D;</i> <span>Export to Excel</span></a>                       
                    </div>
                </div>
            </div>
            <table class="table table-striped table-hover">
                <thead>
                    <tr>                      
                      <th>Código</th>
                      <th>Titulo</th>
                      <th>Autor</th>
                      <th>Cantidad disponible</th>
                      <th>Action</th>
                    </tr>
                  </thead>
                  <tbody>
                       <% librosArr.forEach(function(libro){ %>
                         <tr>                           
                           <td><%= libro.codigo %></td> 
                           <td><%= libro.titulo %></td>
                           <td><%= libro.autor %></td>
                           <td><%= libro.cantidad %></td>
                           <td>
                               <a href="/libros/prestamo/<%= libro.codigo %>/<%= est %>" class="settings" title="Confirmar" data-toggle="tooltip"><i class="material-icons">check</i></a>
                               <a href="/libros/prestamo_rechazo/<%= libro.titulo %>/<%= est %>" class="delete" title="Rechazar" data-toggle="tooltip"><i class="material-icons">&#xE5C9;</i></a>
                           </td>
                         </tr>
                       <% }); %>
                   </tbody>
            </table>
            <div class="clearfix">
                <div class="hint-text">Showing <b>5</b> out of <b>25</b> entries</div>
                <ul class="pagination">
                    <li class="page-item disabled"><a href="#">Previous</a></li>
                    <li class="page-item"><a href="#" class="page-link">1</a></li>
                    <li class="page-item"><a href="#" class="page-link">2</a></li>
                    <li class="page-item active"><a href="#" class="page-link">3</a></li>
                    <li class="page-item"><a href="#" class="page-link">4</a></li>
                    <li class="page-item"><a href="#" class="page-link">5</a></li>
                    <li class="page-item"><a href="#" class="page-link">Next</a></li>
                </ul>
            </div>
        </div>
    </div>  
</main>